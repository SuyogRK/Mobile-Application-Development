<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="1"
    android:columnCount="3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/donut_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchDonutActivity"

        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        app:srcCompat="@drawable/donut_circle" tools:targetApi="lollipop"/>

    <ImageView
        android:id="@+id/icecream_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchIceCreamActivity"

        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        app:srcCompat="@drawable/icecream_circle" tools:targetApi="lollipop"/>

    <ImageView
        android:onClick="launchFroyoActivity"
        android:id="@+id/froyo_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="1"

        app:srcCompat="@drawable/froyo_circle" tools:targetApi="lollipop"/>

</GridLayout>